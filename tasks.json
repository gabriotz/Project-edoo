{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Projeto EDOO (g++)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "main.cpp",       // Caminho relativo à pasta 'projeto edoo'
                "livros.cpp",
                "acervo.cpp",
                "-o",
                "programa_edoo"   // O executável será criado em 'projeto edoo/programa_edoo.exe'
            ],
            // A opção "cwd" (current working directory) não é mais necessária aqui,
            // pois o padrão já é ${workspaceFolder}, que será "projeto edoo".
            // Se quiser ser explícito: "options": { "cwd": "${workspaceFolder}" },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}