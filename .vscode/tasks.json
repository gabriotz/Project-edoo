{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Projeto Biblioteca (g++)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "main.cpp",
                "livros.cpp",
                "acervo.cpp",
                "usuario.cpp",
                "cadastros.cpp",
                "aluno.cpp",      
                "professor.cpp",  
                "-o",
                "programa_edoo.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}